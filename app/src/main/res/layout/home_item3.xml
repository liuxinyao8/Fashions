<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="@dimen/x320"
        android:layout_height="3dp"
        android:background="#E4E0E0"
        android:layout_marginTop="5dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/home_rv3_im"
            android:src="@drawable/home_select"
            android:scaleType="center"
            android:layout_width="@dimen/x100"
            android:layout_height="@dimen/y120" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/home_rv3_tv1"
                android:layout_marginTop="@dimen/y30"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#181111"
                android:text="双宫茧桑蚕丝被 空调被"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:id="@+id/home_rv3_tv2"
                android:text="一级桑蚕丝，吸湿透气柔软"/>
            <TextView
                android:id="@+id/home_rv3_tv3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="$699"
                android:textSize="16sp"
                android:layout_marginLeft="5dp"
                android:textColor="#FF0015"/>
    </LinearLayout>

    </LinearLayout>

</LinearLayout>